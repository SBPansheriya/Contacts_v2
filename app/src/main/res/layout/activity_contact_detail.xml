<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.ContactDetailActivity">

    <RelativeLayout
        android:id="@+id/tbMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/arrow_back" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbMenu"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="150dp">

            <ImageView
                android:id="@+id/selected_person_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/person_placeholder" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/selected_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Cindy"
            android:textColor="@color/bluetheme1"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/messenger"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/messanger" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/call_btn" />

        <ImageView
            android:id="@+id/edit_contact_details"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/edit_contact" />

        <ImageView
            android:id="@+id/unfavourites"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/unfav"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/favourites"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/fav"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title2"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_medium"
            android:gravity="center"
            android:textColor="@color/bluetheme1"
            android:text="Text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_medium"
            android:gravity="center"
            android:textColor="@color/bluetheme1"
            android:text="Call" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_medium"
            android:gravity="center"
            android:textColor="@color/bluetheme1"
            android:text="Edit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_medium"
            android:gravity="center"
            android:textColor="@color/bluetheme1"
            android:text="Favourites" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title3"
        android:background="@color/white_another"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title3"
