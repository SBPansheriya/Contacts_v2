<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_contact_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.CreateContactActivity">


    <RelativeLayout
        android:id="@+id/tbMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:src="@drawable/crooss" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_toEndOf="@+id/cancel"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Create contacts"
            android:textAlignment="center"
            android:textColor="@color/bluetheme1"
            android:textSize="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/tbMenu"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/mediumblack"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:text="Save to : "
            android:textColor="@color/bluetheme1"
            android:textSize="14dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/nocolor_border"
            android:backgroundTint="@color/mediumblue"
            android:gravity="center"
            android:text="Phone"
            android:textColor="#6C7072"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="150dp">

            <ImageView
                android:id="@+id/addPersonImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/person_placeholder" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Add picture"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title3"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/title4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="26dp"
                        android:layout_gravity="top"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/person" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="5dp"
                            android:text="First name"
                            android:textColor="@color/darkgray2" />

                        <EditText
                            android:id="@+id/firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/border2"
                            android:inputType="text"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:padding="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="Last name"
                            android:textColor="@color/darkgray2" />

                        <EditText
                            android:id="@+id/lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/border2"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="10dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title4"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="26dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="13dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/call" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/phone_add_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/add_new_phone_number_item_list" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/addNew"
                    android:layout_width="93dp"
                    android:layout_height="28dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/addnew" />
            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/save_Contact"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/title5"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            app:backgroundTint="@color/blue"
            tools:ignore="NotSibling" />
    </LinearLayout>
</RelativeLayout>